@model IEnumerable<LibraryApp.Models.InvoiceLine>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_ListsLayout.cshtml";
}
<div align="center">
    <h2 align="center">Index</h2>

    <button class="button style2">
        @Html.ActionLink("Create New", "Create")
    </button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice.BillingAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Track.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice.BillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Track.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceLineId }) |
                @Html.ActionLink("Details", "Details", new { id = item.InvoiceLineId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceLineId })
            </td>
        </tr>
    }

</table>
